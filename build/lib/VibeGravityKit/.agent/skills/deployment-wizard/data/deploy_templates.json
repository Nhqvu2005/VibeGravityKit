{
    "static": {
        "serve_cmd": "python -m http.server {{PORT}}",
        "build_cmd": null,
        "default_port": 3000,
        "needs_python_server": true,
        "cwd": ".",
        "notes": "Serves current directory. Put index.html in root."
    },
    "react": {
        "serve_cmd": "npm run dev -- --port {{PORT}}",
        "build_cmd": "npm run build",
        "default_port": 5173,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "Vite-based React (CRA is deprecated). Has its own dev server."
    },
    "vite": {
        "serve_cmd": "npm run dev -- --port {{PORT}}",
        "build_cmd": "npm run build",
        "default_port": 5173,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "Generic Vite project (Vue/React/Svelte/Solid)."
    },
    "nextjs": {
        "serve_cmd": "npm run dev -- -p {{PORT}}",
        "build_cmd": "npm run build",
        "default_port": 3000,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "Next.js uses -p flag for port."
    },
    "nuxt": {
        "serve_cmd": "npm run dev -- --port {{PORT}}",
        "build_cmd": "npm run build",
        "default_port": 3000,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "Nuxt 3 dev server."
    },
    "django": {
        "serve_cmd": "python manage.py runserver 0.0.0.0:{{PORT}}",
        "build_cmd": null,
        "default_port": 8000,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "Django built-in dev server. Use 0.0.0.0 for tunnel access."
    },
    "flask": {
        "serve_cmd": "flask run --host 0.0.0.0 --port {{PORT}}",
        "build_cmd": null,
        "default_port": 5000,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "Set FLASK_APP env if not using app.py."
    },
    "fastapi": {
        "serve_cmd": "uvicorn main:app --host 0.0.0.0 --port {{PORT}} --reload",
        "build_cmd": null,
        "default_port": 8000,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "Requires uvicorn. Change main:app if entry point differs."
    },
    "express": {
        "serve_cmd": "node server.js",
        "build_cmd": null,
        "default_port": 3000,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "Port usually set via PORT env or hardcoded. Check server.js."
    },
    "php": {
        "serve_cmd": "php -S 0.0.0.0:{{PORT}}",
        "build_cmd": null,
        "default_port": 8080,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "PHP built-in server. Serves current directory."
    },
    "hugo": {
        "serve_cmd": "hugo server --port {{PORT}} --bind 0.0.0.0",
        "build_cmd": "hugo",
        "default_port": 1313,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "Hugo static site generator."
    },
    "ruby": {
        "serve_cmd": "rails server -p {{PORT}} -b 0.0.0.0",
        "build_cmd": null,
        "default_port": 3000,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "Ruby on Rails dev server."
    },
    "custom": {
        "serve_cmd": "{{CUSTOM_CMD}}",
        "build_cmd": null,
        "default_port": 3000,
        "needs_python_server": false,
        "cwd": ".",
        "notes": "User provides their own serve command."
    }
}