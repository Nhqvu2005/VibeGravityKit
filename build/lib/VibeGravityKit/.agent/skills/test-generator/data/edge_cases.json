{
    "edge_cases": {
        "input_validation": {
            "description": "Test all input boundary conditions",
            "cases": {
                "null_undefined": {
                    "description": "Pass null/undefined/None for each parameter",
                    "python": "None",
                    "javascript": "null, undefined",
                    "severity": "critical"
                },
                "empty_string": {
                    "description": "Pass empty string '' for text parameters",
                    "values": [
                        "",
                        " ",
                        "   "
                    ],
                    "severity": "high"
                },
                "empty_collection": {
                    "description": "Pass empty array/dict/set",
                    "values": [
                        "[]",
                        "{}",
                        "set()"
                    ],
                    "severity": "high"
                },
                "max_length_string": {
                    "description": "Pass extremely long string (10K+ chars)",
                    "value": "\"a\" * 10000",
                    "severity": "medium"
                },
                "unicode_special": {
                    "description": "Unicode, emoji, RTL characters",
                    "values": [
                        "'„Åì„Çì„Å´„Å°„ÅØ'",
                        "'üéâüöÄüí•'",
                        "'\\u200b'",
                        "'ŸÖÿ±ÿ≠ÿ®ÿß'"
                    ],
                    "severity": "medium"
                },
                "special_characters": {
                    "description": "Characters that break parsers",
                    "values": [
                        "'\\n\\r\\t'",
                        "'\\0'",
                        "\"'\\\"\"",
                        "'<>&\\\\'"
                    ],
                    "severity": "high"
                },
                "injection_payloads": {
                    "description": "SQL/XSS/Command injection attempts",
                    "values": [
                        "\"' OR '1'='1\"",
                        "\"<script>alert(1)</script>\"",
                        "\"; DROP TABLE users; --\"",
                        "\"$(whoami)\"",
                        "\"{{7*7}}\"",
                        "\"%00\"",
                        "\"..\\\\..\\\\etc\\\\passwd\""
                    ],
                    "severity": "critical"
                },
                "whitespace_variants": {
                    "description": "Leading/trailing/internal whitespace",
                    "values": [
                        "' test '",
                        "'  multiple  spaces  '",
                        "'\\ttabs\\t'"
                    ],
                    "severity": "low"
                }
            }
        },
        "numeric_boundaries": {
            "description": "Test numeric edge cases",
            "cases": {
                "zero": {
                    "value": 0,
                    "description": "Division by zero, empty counts",
                    "severity": "critical"
                },
                "negative": {
                    "value": -1,
                    "description": "Negative index, negative amount",
                    "severity": "high"
                },
                "max_int": {
                    "description": "Maximum integer values",
                    "python": "2**31 - 1",
                    "javascript": "Number.MAX_SAFE_INTEGER",
                    "severity": "medium"
                },
                "min_int": {
                    "description": "Minimum integer values",
                    "python": "-(2**31)",
                    "javascript": "Number.MIN_SAFE_INTEGER",
                    "severity": "medium"
                },
                "float_precision": {
                    "description": "Floating point precision issues",
                    "values": [
                        "0.1 + 0.2",
                        "1e-10",
                        "1e308",
                        "float('inf')"
                    ],
                    "severity": "medium"
                },
                "nan": {
                    "description": "Not a Number",
                    "python": "float('nan')",
                    "javascript": "NaN",
                    "severity": "high"
                },
                "infinity": {
                    "description": "Positive and negative infinity",
                    "python": "float('inf')",
                    "javascript": "Infinity",
                    "severity": "medium"
                }
            }
        },
        "collection_edge_cases": {
            "description": "Test list/array/dict edge cases",
            "cases": {
                "empty": {
                    "values": [
                        "[]",
                        "{}",
                        "set()",
                        "()"
                    ],
                    "severity": "high"
                },
                "single_item": {
                    "values": [
                        "[1]",
                        "{\"key\": \"value\"}"
                    ],
                    "severity": "medium"
                },
                "duplicates": {
                    "value": "[1, 1, 1, 1]",
                    "severity": "medium"
                },
                "very_large": {
                    "description": "Lists with 10K+ items",
                    "value": "list(range(10000))",
                    "severity": "medium"
                },
                "nested_deep": {
                    "description": "Deeply nested structures (10+ levels)",
                    "severity": "low"
                },
                "mixed_types": {
                    "value": "[1, 'two', None, True, {}, []]",
                    "severity": "medium"
                }
            }
        },
        "network_errors": {
            "description": "Test network failure handling",
            "cases": {
                "timeout": {
                    "description": "Request takes too long, connection drops",
                    "mock": "mock.side_effect = TimeoutError()",
                    "severity": "critical"
                },
                "server_error": {
                    "description": "500 Internal Server Error",
                    "mock": "mock.return_value.status_code = 500",
                    "severity": "critical"
                },
                "not_found": {
                    "description": "404 Not Found",
                    "mock": "mock.return_value.status_code = 404",
                    "severity": "high"
                },
                "rate_limit": {
                    "description": "429 Too Many Requests",
                    "mock": "mock.return_value.status_code = 429",
                    "severity": "high"
                },
                "malformed_response": {
                    "description": "Invalid JSON, truncated response",
                    "mock": "mock.return_value.json.side_effect = ValueError()",
                    "severity": "high"
                },
                "cors_error": {
                    "description": "Cross-origin blocked",
                    "severity": "medium"
                },
                "connection_refused": {
                    "description": "Server is down, port not listening",
                    "mock": "mock.side_effect = ConnectionRefusedError()",
                    "severity": "critical"
                },
                "dns_failure": {
                    "description": "Domain doesn't resolve",
                    "mock": "mock.side_effect = socket.gaierror()",
                    "severity": "high"
                }
            }
        },
        "auth_security": {
            "description": "Test authentication and authorization",
            "cases": {
                "no_token": {
                    "description": "Request without authentication",
                    "expected": "401 Unauthorized",
                    "severity": "critical"
                },
                "expired_token": {
                    "description": "Token that has expired",
                    "expected": "401 Unauthorized",
                    "severity": "critical"
                },
                "invalid_token": {
                    "description": "Malformed or tampered JWT",
                    "values": [
                        "'invalid.jwt.token'",
                        "'eyJhbGciOiJub25lIn0..'"
                    ],
                    "severity": "critical"
                },
                "wrong_permissions": {
                    "description": "Valid user accessing admin-only resource",
                    "expected": "403 Forbidden",
                    "severity": "critical"
                },
                "role_escalation": {
                    "description": "User trying to modify their own role/permissions",
                    "severity": "critical"
                },
                "idor": {
                    "description": "Accessing another user's resources by changing ID",
                    "severity": "critical"
                },
                "brute_force": {
                    "description": "Many rapid login attempts",
                    "expected": "Rate limited after N attempts",
                    "severity": "high"
                }
            }
        },
        "concurrency_state": {
            "description": "Test race conditions and state issues",
            "cases": {
                "double_submit": {
                    "description": "Submit same form/request twice rapidly",
                    "severity": "high"
                },
                "race_condition": {
                    "description": "Two users modifying same resource simultaneously",
                    "severity": "high"
                },
                "stale_data": {
                    "description": "User edits data that was modified by another user",
                    "severity": "medium"
                },
                "multi_tab": {
                    "description": "User opens same page in multiple browser tabs",
                    "severity": "medium"
                },
                "browser_back_forward": {
                    "description": "User navigates with back/forward buttons after action",
                    "severity": "medium"
                },
                "fresh_install": {
                    "description": "First-time use with no existing data",
                    "severity": "high"
                },
                "corrupted_state": {
                    "description": "Local storage/cookie is corrupted or cleared mid-session",
                    "severity": "medium"
                },
                "session_expired_mid_action": {
                    "description": "Session expires while user is filling a form",
                    "severity": "high"
                }
            }
        },
        "file_operations": {
            "description": "Test file handling edge cases",
            "cases": {
                "file_not_found": {
                    "description": "Reference to non-existent file",
                    "severity": "critical"
                },
                "permission_denied": {
                    "description": "Read-only file, no write access",
                    "severity": "high"
                },
                "empty_file": {
                    "description": "Zero-byte file",
                    "severity": "medium"
                },
                "very_large_file": {
                    "description": "File larger than available memory",
                    "severity": "medium"
                },
                "special_filename": {
                    "description": "Filenames with spaces, unicode, dots",
                    "values": [
                        "'my file (1).txt'",
                        "'„Éá„Éº„Çø.csv'",
                        "'...hidden'"
                    ],
                    "severity": "medium"
                },
                "path_traversal": {
                    "description": "../../etc/passwd style attacks",
                    "values": [
                        "'../../etc/passwd'",
                        "'..\\\\..\\\\windows\\\\system32'"
                    ],
                    "severity": "critical"
                }
            }
        }
    },
    "mandatory_checklist": {
        "description": "QA agent MUST verify these before marking tests as done",
        "items": [
            "Every public function has at least 1 test",
            "Null/None input tested for every required parameter",
            "Empty string tested for every string parameter",
            "Zero tested for every numeric parameter",
            "Negative number tested for every numeric parameter",
            "Empty collection tested for every list/dict parameter",
            "Invalid type tested for at least 1 parameter per function",
            "Error responses return proper HTTP status codes",
            "Auth-protected endpoints reject unauthenticated requests",
            "SQL injection payload tested on at least 1 text input",
            "XSS payload tested on at least 1 user-facing text input",
            "Large input (10K+ chars / 10K+ items) tested on at least 1 function",
            "Concurrent/duplicate request tested for state-mutating operations"
        ]
    }
}